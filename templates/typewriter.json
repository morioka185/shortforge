{
  "id": "typewriter",
  "name": "タイプライター",
  "description": "左から1文字ずつ表示",
  "category": "basic",
  "animation": {
    "unit": "character",
    "property": "opacity",
    "from": { "opacity": 0.0 },
    "to": { "opacity": 1.0 },
    "duration_ms": 50,
    "delay_per_unit_ms": 70,
    "easing": "ease"
  },
  "default_style": {
    "font_family": "Noto Sans JP",
    "font_size": 40,
    "font_weight": 900,
    "color": "#FFFFFF",
    "outline": { "enabled": true, "color": "#000000", "width": 2 }
  },
  "preview_text": "サンプルテキスト"
}
